<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayLevel"
    android:orientation="vertical"
    android:background="@mipmap/background_intrebari_fore"
    android:weightSum="4.5">


    <TextView
        android:id="@+id/score_tv_play_mode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Scor:4/10"
        android:layout_weight="0.2"
        android:textColor="#FFF"/>
    <TextView
        android:id="@+id/play_level_intrebare"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:text="ici va fi intrebarea"
        android:textColor="#FFF" />

    <CheckBox
        android:id="@+id/raspuns1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/yello"
        android:text="CheckBox"
        android:onClick="switchUserSelect"
        android:textColor="#FFF"
        android:textSize="18dp"
        />

    <CheckBox
        android:id="@+id/raspuns2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/yello"
        android:onClick="switchUserSelect"
        android:text="CheckBox"
        android:textColor="#FFF"
        android:textSize="18dp"
        />

    <CheckBox
        android:id="@+id/raspuns3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/yello"
        android:text="CheckBox"
        android:onClick="switchUserSelect"
        android:textColor="#fff"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/buttonAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.3"
        android:background="@drawable/gradient_button_intrebari"
        android:text="RÄƒspunde"
        android:textAllCaps="false"

        android:textColor="@color/yello_ras" />
</LinearLayout>